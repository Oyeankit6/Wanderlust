<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <h1 class="col-6 offset-3">Login WanderLust</h1>
 <div class="col-6 offset-2">
   <form action="/login" method="POST"  novalidate class="needs-validation">
     <div class="md-3">
       <label for="username" class="form-label">username</label>
       <input type="text" class="form-control"  name="username" value="" id="username"  required>
       

         <div class="md-3">
           <label for="password" class="form-label">Password</label>
           <input type="password" class="form-control"  name="password" value="" id="email"  required>

         </div>
         <button class="btn btn-success">Login</button>
   </form>
 </div>
</div>